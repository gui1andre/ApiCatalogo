  </ItemGroup>

  <ItemGroup>
    <None Remove="Controllers\" />
    <None Remove="Models\" />
    <None Remove="Context\" />
    <None Remove="Repository\" />
    <None Remove="DTOs\" />
    <None Remove="DTOs\Mappings\" />
